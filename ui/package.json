{
  "name": "kafka-java-vertx-starter-ui",
  "version": "1.0.0",
  "description": "UI for the Kafka Java Vertx starter application",
  "author": "",
  "license": "Apache-2.0",
  "private": true,
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ibm-messaging/kafka-java-vertx-starter.git"
  },
  "scripts": {
    "start": "webpack-dev-server --mode development",
    "build": "webpack --mode production",
    "test": "jest",
    "storybook": "start-storybook"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix --cache"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "commitlint": {
    "rules": {
      "header-max-length": [
        2,
        "always",
        72
      ],
      "body-max-length": [
        2,
        "always",
        72
      ],
      "footer-max-length": [
        2,
        "always",
        72
      ],
      "type-enum": [
        2,
        "always",
        [
          "feat",
          "fix",
          "docs",
          "style",
          "refactor",
          "test",
          "revert"
        ]
      ],
      "type-empty": [
        2,
        "never"
      ],
      "references-empty": [
        2,
        "never"
      ]
    }
  },
  "dependencies": {
    "carbon-components": "^10.12.0",
    "carbon-components-react": "^7.12.0",
    "carbon-icons": "^7.0.7",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "devDependencies": {
    "@babel/core": "^7.10.2",
    "@babel/preset-env": "^7.10.2",
    "@babel/preset-react": "^7.10.1",
    "@commitlint/cli": "^8.3.5",
    "@storybook/addon-actions": "^5.3.19",
    "@storybook/addon-centered": "^5.3.19",
    "@storybook/addon-info": "^5.3.19",
    "@storybook/addon-knobs": "^5.3.19",
    "@storybook/addon-storysource": "^5.3.19",
    "@storybook/react": "^5.3.19",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "babel-jest": "^26.0.1",
    "babel-loader": "^8.1.0",
    "css-loader": "^3.5.3",
    "eslint": "^7.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.20.0",
    "html-webpack-plugin": "^4.3.0",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lint-staged": "^10.2.7",
    "mocha": "^7.2.0",
    "prettier": "^2.0.5",
    "react-test-renderer": "^16.13.1",
    "sass": "^1.26.7",
    "sass-loader": "^8.0.2",
    "style-loader": "^1.2.1",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.11.0"
  }
}
